---
import { calcularEdad } from '../../calculateAge';
import contenido from "../data/Perros.json";

const { id } = Astro.params;
const perro = contenido.perros.find(p => p.id === Number(id));

const edad = perro ? calcularEdad(perro.fechaNacimiento) : null;
---

<section class="animate-fadeInSlow">
    <div class="flex justify-start m-4 flex-col">
        <h1 class="text-4xl text-[#FF7700] mb-1">Características</h1>
        <p class="text-black"><span class="text-[#ff7700]">Nombre:</span> {perro?.Nombre}</p>
        <p class="text-black"><span class="text-[#ff7700]">Raza:</span> {perro?.Raza}</p>
        <p class="text-black">
            <span class="text-[#ff7700]">Edad:</span> 
            {edad 
                ? edad.tipo === 'meses'
                    ? `${edad.valor} meses`
                    : `${edad.valor} años`
                : 'Edad no disponible'}
        </p>
        <p class="text-black"><span class="text-[#ff7700]">Género:</span> {perro?.Genero}</p>
        <p class="text-black"><span class="text-[#ff7700]">Sobre mi:</span> {perro?.SobreMi}</p>
    </div>
</section>
